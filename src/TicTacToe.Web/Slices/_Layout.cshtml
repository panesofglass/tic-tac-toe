@inherits RazorLayoutSlice<LayoutModel>

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title - Tic-Tac-Toe</title>
    <script type="module" src="https://cdn.jsdelivr.net/gh/starfederation/datastar@v1.0.0-beta.10/bundles/datastar.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="/css/forms.css" asp-append-version="true">
    <style>
        .game-board {
            display: grid;
            grid-template-columns: repeat(3, 100px);
            gap: 2px;
            margin: 20px auto;
        }
        .cell {
            width: 100px;
            height: 100px;
            border: 1px solid #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2em;
        }
        .cell[data-on-click] {
            cursor: pointer;
            background: #f5f5f5;
        }
        .cell[data-on-click]:hover {
            background: #e5e5e5;
        }
    </style>
</head>
<body>
    @await RenderPartialAsync(Slices._Nav.Create(Model.CurrentPlayer))

    <h1>@Model.Title</h1>
    <main id="root">
        @await RenderBodyAsync()
    </main>
</body>
</html>
