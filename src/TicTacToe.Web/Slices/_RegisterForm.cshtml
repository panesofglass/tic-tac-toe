@inherits RazorSlice<(string Title, string? Error)>

<div id="register-form" class="register-form">
    <h2>Register</h2>
    <form data-signals="{email: '', name: '', password: ''}" data-on-submit="@@post('/register')" @Html.DatastarValidationAttributes(Model.Error)>
        @Html.DatastarValidationMessage(Model.Error)
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" data-bind="email" required>
        </div>
        <div class="form-group">
            <label for="name">Display Name</label>
            <input type="text" id="name" name="name" data-bind="name" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" data-bind="password" required 
                   minlength="6" 
                   pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{6,}$"
                   title="Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character">
        </div>
        <button>Register</button>
    </form>
    <div class="form-footer">
        Already have an account? <a href="/login">Login</a>
    </div>
</div>
