@inherits RazorSlice<string?>

@if (!string.IsNullOrEmpty(Model))
{
    <div class="error-message" role="alert">
        @Model
    </div>
}

<style>
    .error-message {
        background-color: #ffebee;
        color: #c62828;
        padding: 1rem;
        margin: 1rem 0;
        border-radius: 4px;
        border: 1px solid #ef9a9a;
    }
</style>
