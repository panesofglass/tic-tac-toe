@inherits RazorSlice<(string Title, AntiforgeryTokenSet Token, string? Error)>

<div id="register-form" class="register-form">
    <h2>Register</h2>
    <form method="post" action="/register" @Html.DatastarValidationAttributes(Model.Error)>
        @Html.DatastarAntiforgeryToken(Model.Token)
        @Html.DatastarValidationMessage(Model.Error)
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="name">Display Name</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required 
                   minlength="@PasswordHasher.MinPasswordLength"
                   maxlength="@PasswordHasher.MaxPasswordLength"
                   pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,}$"
                   title="Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character">
        </div>
        <button>Register</button>
    </form>
    <div class="form-footer">
        Already have an account? <a href="/login">Login</a>
    </div>
</div>
