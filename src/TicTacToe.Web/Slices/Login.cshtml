@inherits RazorSliceHttpResult<string?>
@implements IUsesLayout<_Layout, LayoutModel>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<div id="login-form" class="login-form">
    <h2>Login</h2>
    <form method="post" action="/login" @Html.FormValidationAttributes(Model)>
        @Html.FormAntiforgeryToken(Token)
        @Html.FormValidationMessage(Model)
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit">Login</button>
    </form>
    <div class="form-footer">
        Don't have an account? <a href="/register">Register</a>
    </div>
</div>

@functions {
    public LayoutModel LayoutModel => new("Login");
    public AntiforgeryTokenSet Token => Antiforgery.GetAndStoreTokens(HttpContext!);
}
