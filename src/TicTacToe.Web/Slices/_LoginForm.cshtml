@inherits RazorSlice<(string Title, AntiforgeryTokenSet Token, string? Error)>

<div id="login-form" class="login-form">
    <h2>Login</h2>
    <form method="post" action="/login" @Html.DatastarValidationAttributes(Model.Error)>
        @Html.DatastarAntiforgeryToken(Model.Token)
        @Html.DatastarValidationMessage(Model.Error)
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit">Login</button>
    </form>
    <div class="form-footer">
        Don't have an account? <a href="/register">Register</a>
    </div>
</div>
